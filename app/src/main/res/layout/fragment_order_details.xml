<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fafafa">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Ersel"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="#fff"
                    />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/_2sdp"
            card_view:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            card_view:contentPadding="@dimen/_1sdp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="@dimen/_15sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="@dimen/_2sdp"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <TextView
                    android:id="@+id/details_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text=" محمد أحمد محمد"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:gravity="right"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إسم العميل :"
                    android:paddingRight="@dimen/_4sdp"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العنوان بالتفصيل"
                android:textColor="#ababab"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_4sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/details_shipment_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="الهرم"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <TextView
                    android:id="@+id/details_shipment_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="الجيزة"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingRight="@dimen/_4sdp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                Tool:text="شارع الحمد متفرع من شارع الهرم عماير جاردينيا"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_4sdp"
                />

            <com.google.android.gms.maps.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/client_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_margin="@dimen/_2sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="right"
                android:gravity="right"
                >

                <Button
                    android:id="@+id/shipment_directions"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:text="الإتجاهات"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:drawableLeft="@drawable/ic_directions_white_24dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/_2sdp"
            card_view:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            card_view:contentPadding="@dimen/_1sdp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="@dimen/_15sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="@dimen/_2sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/call_first_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/details_first_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="0101548554"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رقم التليفون :"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingRight="@dimen/_4sdp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/call_second_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/details_second_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="0101548554"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رقم التليفون :"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingRight="@dimen/_4sdp"
                    />
            </LinearLayout>
        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/_2sdp"
            card_view:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            card_view:contentPadding="@dimen/_1sdp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="@dimen/_15sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="@dimen/_2sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تفاصيل الشحنة"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/shipment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="0554"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رقم الشحنـة :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingRight="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"

                    >
                    <TextView
                        android:id="@+id/shipment_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="554"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سعر الشحنة :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"

                    >
                    <TextView
                        android:id="@+id/deliver_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="554"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تحصيل مبلغ :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >
                    <TextView
                        android:id="@+id/total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="554"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الإجمالـــي    :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"

                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/_2sdp"
            card_view:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            card_view:contentPadding="@dimen/_1sdp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="@dimen/_15sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="@dimen/_2sdp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملحوظة"
                android:textColor="#ababab"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_4sdp"
                />
            <TextView
                android:id="@+id/shipment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                Tool:text="أي ملااااااااااااااحظااات"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_4sdp"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/start_delivered_shipment"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="بـدأ التوصيــل"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/wait_cancle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_17sdp"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/shipment_under_wating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="تحت الإنتظار"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/_5sdp"
                />

            <Button
                android:id="@+id/shipment_rejected"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="تم الرفض"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_5sdp"
                />


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/shipment_details_progress"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        style="?android:attr/progressBarStyleSmall"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress_bar"
        android:max="100"
        android:progress="20"
        android:visibility="gone"
        />

</FrameLayout>

</ScrollView>
