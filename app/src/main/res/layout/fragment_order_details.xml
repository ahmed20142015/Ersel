<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fafafa">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Ersel"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="5dp"
            card_view:contentPadding="1dp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/details_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text=" محمد أحمد محمد"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="right"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إسم العميل :"
                    android:paddingRight="4dp"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العنوان بالتفصيل"
                android:textColor="#ababab"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:paddingRight="4dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/details_shipment_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="الهرم"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/details_shipment_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الجيزة"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                Tool:text="شارع الحمد متفرع من شارع الهرم عماير جاردينيا"
                android:textColor="#ffb147"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                />

            <com.google.android.gms.maps.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/client_location"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="2dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/shipment_directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />
                <!--<View-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="#ffb147"-->
                    <!--android:layout_marginEnd="20dp"-->
                    <!--android:layout_marginStart="20dp"-->
                    <!--/>-->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الإتجاهات    :"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="5dp"
            card_view:contentPadding="1dp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/call_first_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/details_first_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="0101548554"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رقم التليفون :"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffb147"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/call_second_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/details_second_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tool:text="0101548554"
                    android:textColor="#ffb147"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رقم التليفون :"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>
        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="5dp"
            card_view:contentPadding="1dp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تفاصيل الشحنة"
                    android:textColor="#ababab"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="4dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/shipment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="0554"
                        android:textColor="#ffb147"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رقم الشحنة :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingRight="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:id="@+id/shipment_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        Tool:text="554"
                        android:textColor="#ffb147"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تحصيل مبلغ :"
                        android:textColor="#ababab"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingRight="4dp"

                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="5dp"
            card_view:contentPadding="1dp"
            app:cardBackgroundColor="#f6f6f6"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملحوظة"
                android:textColor="#ababab"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="4dp"
                />
            <TextView
                android:id="@+id/shipment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                Tool:text="أي ملااااااااااااااحظااات"
                android:textColor="#ffb147"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="4dp"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/start_delivered_shipment"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="بـدأ التوصيــل"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:background="#ffb147"
            android:textColor="#fff"
            />
        <LinearLayout
            android:id="@+id/wait_cancle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:id="@+id/shipment_under_wating"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="تحت الإنتظار"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="#ffb147"
                android:textColor="#fff"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/shipment_rejected"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="تم الرفض"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="#ffb147"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>
