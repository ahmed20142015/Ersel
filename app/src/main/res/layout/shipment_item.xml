<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:Tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:layout_marginStart="@dimen/_14sdp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"

        android:elevation="@dimen/_2sdp"
        card_view:cardElevation="@dimen/_2sdp"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:contentPadding="@dimen/_1sdp"
        app:cardBackgroundColor="#f6f6f6"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/recycle_hover"
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_width="@dimen/_35sdp"
                     android:layout_height="@dimen/_35sdp"
                     android:layout_margin="@dimen/_5sdp"
                     android:scaleType="centerCrop"
                     android:src="@color/colorPrimary"
                     android:textAlignment="center"
                     />

                 <TextView
                     android:id="@+id/shipment_number"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:gravity="center"
                     Tool:text="0"
                     android:textColor="#fff"
                     android:textStyle="bold"
                     />
             </FrameLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_gravity="center"
                 android:layout_marginStart="@dimen/_3sdp"
                 android:layout_marginEnd="@dimen/_3sdp"
                 >
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"

                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Order : "
                         android:textColor="#484848"
                         android:textSize="@dimen/_15sdp"
                         android:textStyle="bold"
                         />
                     <TextView
                         android:id="@+id/shipment_track_number"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="555 "
                         android:textColor="#484848"
                         android:textSize="@dimen/_13sdp"
                         android:textStyle="bold"
                         />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"

                     >
                     <TextView
                         android:id="@+id/shipment_date"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="20/06/2017"
                         android:textColor="#a4a4a4"
                         android:textSize="@dimen/_11sdp"
                         android:textStyle="bold"
                         />
                     <TextView
                         android:id="@+id/shipment_time"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="15.30"
                         android:textColor="#a4a4a4"
                         android:textSize="@dimen/_11sdp"
                         android:textStyle="bold"
                         android:layout_marginStart="@dimen/_10sdp"
                         android:layout_marginEnd="@dimen/_10sdp"
                         />

                 </LinearLayout>

             </LinearLayout>

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_1sdp"
             android:background="#e8e8e8"
             android:layout_marginTop="@dimen/_5sdp"
             android:layout_marginBottom="@dimen/_5sdp"
             android:layout_marginEnd="@dimen/_5sdp"
             android:layout_marginStart="@dimen/_5sdp"
            />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginStart="@dimen/_10sdp"
             android:layout_marginEnd="@dimen/_10sdp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Type :"
                 android:textColor="#ababab"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"

                 />
             <TextView
                 android:id="@+id/shipment_type"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="shipment"
                 android:textColor="#ffb147"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginEnd="@dimen/_5sdp"
                 />

         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginStart="@dimen/_10sdp"
             android:layout_marginEnd="@dimen/_10sdp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="City : "
                 android:textColor="#ababab"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"
                 />
             <TextView
                 android:id="@+id/shipment_city"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Giza"
                 android:textColor="#ababab"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginEnd="@dimen/_5sdp"
                 />

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginStart="@dimen/_10sdp"
             android:layout_marginEnd="@dimen/_10sdp"
             android:layout_marginBottom="@dimen/_5sdp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Address : "
                 android:textColor="#ababab"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"
                 />
             <TextView
                 android:id="@+id/shipment_address"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Giza"
                 android:textColor="#ababab"
                 android:textSize="@dimen/_11sdp"
                 android:textStyle="bold"
                 android:maxLines="1"
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginEnd="@dimen/_5sdp"
                 />

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_1sdp"
             android:background="#e8e8e8"
             android:layout_marginTop="@dimen/_5sdp"
             android:layout_marginBottom="@dimen/_5sdp"
             android:layout_marginEnd="@dimen/_5sdp"
             android:layout_marginStart="@dimen/_5sdp"
             />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="@dimen/_40sdp"
             android:layout_gravity="center"
             android:gravity="center">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_info_outline_black_24dp"
                 android:tint="@color/colorPrimary"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Order details"
                 android:textColor="#ababab"
                 android:textSize="@dimen/_14sdp"
                 android:textStyle="bold"
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginEnd="@dimen/_5sdp"
                 />
         </LinearLayout>


     </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>